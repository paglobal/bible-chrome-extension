{
  "manifest_version": 3,
  "name": "Bible Chrome Extension",
  "version": "0.0.1",
  "minimum_chrome_version": "70",
  "description": "Study the Bible right from your browser.",
  "permissions": ["sidePanel", "storage", "bookmarks"],
  "icons": {
    "16": "assets/icons/icon-dev-16.png",
    "32": "assets/icons/icon-dev-32.png",
    "48": "assets/icons/icon-dev-48.png",
    "128": "assets/icons/icon-dev-128.png"
  },
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Bible Chrome Extension"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": "Alt+B"
    }
  }
}
